{
  "name": "refor",
  "version": "0.0.0",
  "main": "./dist/main/index.js",
  "module": "./dist/es/index.js",
  "jsnext:main": "./dist/es/index.js",
  "typings": "./dist/es/index.d.ts",
  "repository": "git@github.com:mozisan/refor.git",
  "author": "mozisan <cc.sig@icloud.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^21.1.2",
    "jest": "^21.2.1",
    "npm-run-all": "^4.1.1",
    "ts-jest": "^21.1.2",
    "tslint": "^5.7.0",
    "tslint-eslint-rules": "^4.1.1",
    "tslint-microsoft-contrib": "^5.0.1",
    "tslint-react": "^3.2.0",
    "typescript": "^2.5.3"
  },
  "scripts": {
    "clean": "rimraf ./dist",
    "transpile": "run-p transpile:*",
    "transpile:main": "tsc --outDir ./dist/main",
    "transpile:es": "tsc --module esnext --outDir ./dist/es",
    "test": "run-s test:lint test:transpile test:unittest",
    "test:lint": "tslint --project . --type-check",
    "test:transpile": "tsc --noEmit",
    "test:unittest": "jest",
    "build": "run-s test clean transpile",
    "prepublish": "run-p build"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}"
    ],
    "coverageDirectory": "<rootDir>/coverage/",
    "coverageReporters": [
      "lcov",
      "text-summary"
    ],
    "mapCoverage": true,
    "testRegex": "\\.spec\\.tsx?$",
    "moduleFileExtensions": [
      "js",
      "jsx",
      "ts",
      "tsx"
    ],
    "transform": {
      "\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "unmockedModulePathPatterns": [
      "<rootDir>/node_modules/"
    ]
  }
}
