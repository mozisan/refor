{
  "name": "refor",
  "version": "0.1.2",
  "repository": "git@github.com:mozisan/refor.git",
  "author": "mozisan <cc.sig@icloud.com>",
  "license": "MIT",
  "main": "./dist/main/index.js",
  "module": "./dist/es/index.js",
  "jsnext:main": "./dist/es/index.js",
  "typings": "./dist/es/index.d.ts",
  "files": [
    "dist",
    "package.json",
    "README.md"
  ],
  "dependencies": {},
  "peerDependencies": {
    "mime": "^2.0.3",
    "react": ">=15.0.0",
    "whatwg-fetch": ">=2.0.0"
  },
  "devDependencies": {
    "@types/jest": "21.1.4",
    "@types/lodash": "4.14.77",
    "@types/mime": "^2.0.0",
    "@types/react": "16.0.13",
    "@types/react-dom": "16.0.1",
    "coveralls": "3.0.0",
    "enzyme": "3.1.0",
    "enzyme-adapter-react-16": "1.0.2",
    "html-webpack-plugin": "2.30.1",
    "if-env": "1.0.0",
    "jest": "21.2.1",
    "lodash": "4.17.4",
    "npm-run-all": "4.1.1",
    "react": "16.0.0",
    "react-dom": "16.0.0",
    "react-test-renderer": "16.0.0",
    "refor": "0.0.6",
    "ts-jest": "21.1.3",
    "ts-loader": "3.0.5",
    "tslint": "5.7.0",
    "tslint-eslint-rules": "4.1.1",
    "tslint-microsoft-contrib": "5.0.1",
    "tslint-react": "3.2.0",
    "typescript": "2.5.3",
    "webpack": "3.8.1",
    "webpack-dev-server": "2.9.3"
  },
  "scripts": {
    "clean": "rimraf ./dist",
    "transpile": "run-p transpile:*",
    "transpile:main": "tsc --outDir ./dist/main",
    "transpile:es": "tsc --module esnext --outDir ./dist/es",
    "test": "run-s test:lint test:transpile test:spec coverage:upload",
    "test:lint": "tslint --project . --type-check",
    "test:transpile": "run-p \"transpile:* --noEmit\"",
    "test:spec": "jest",
    "coverage:upload": "if-env WERCKER_GIT_BRANCH=master && (cat ./coverage/lcov.info | coveralls) || true",
    "prepare": "run-s clean transpile",
    "prepublishOnly": "yarn test"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}"
    ],
    "coveragePathIgnorePatterns": [
      "/index\\.tsx?$",
      "/abstract\\.tsx?$",
      "<rootDir>/src/schema/",
      "<rootDir>/src/wrappers/"
    ],
    "coverageDirectory": "<rootDir>/coverage/",
    "coverageReporters": [
      "lcov",
      "text-summary"
    ],
    "mapCoverage": true,
    "testRegex": "\\.spec\\.tsx?$",
    "moduleFileExtensions": [
      "js",
      "jsx",
      "ts",
      "tsx"
    ],
    "transform": {
      "\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "unmockedModulePathPatterns": [
      "<rootDir>/node_modules/"
    ],
    "setupFiles": [
      "<rootDir>/setup-jest.js"
    ]
  }
}
