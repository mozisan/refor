{
  "name": "refor",
  "version": "0.0.2",
  "repository": "git@github.com:mozisan/refor.git",
  "author": "mozisan <cc.sig@icloud.com>",
  "license": "MIT",
  "main": "./dist/main/index.js",
  "module": "./dist/es/index.js",
  "jsnext:main": "./dist/es/index.js",
  "typings": "./dist/es/index.d.ts",
  "dependencies": {
    "lodash.values": "^4.0.0"
  },
  "peerDependencies": {
    "react": ">=15.0.0"
  },
  "devDependencies": {
    "@types/jest": "21.1.4",
    "@types/lodash": "4.14.77",
    "@types/react": "16.0.13",
    "@types/react-dom": "16.0.1",
    "enzyme": "3.1.0",
    "enzyme-adapter-react-16": "1.0.2",
    "jest": "21.2.1",
    "lodash": "4.17.4",
    "npm-run-all": "4.1.1",
    "react": "16.0.0",
    "react-dom": "16.0.0",
    "react-test-renderer": "16.0.0",
    "ts-jest": "21.1.3",
    "tslint": "5.7.0",
    "tslint-eslint-rules": "4.1.1",
    "tslint-microsoft-contrib": "5.0.1",
    "tslint-react": "3.2.0",
    "typescript": "2.5.3"
  },
  "scripts": {
    "clean": "rimraf ./dist",
    "transpile": "run-p transpile:*",
    "transpile:main": "tsc --outDir ./dist/main",
    "transpile:es": "tsc --module esnext --outDir ./dist/es",
    "test": "run-s test:lint test:transpile test:spec",
    "test:lint": "tslint --project . --type-check",
    "test:transpile": "run-p \"transpile:* --noEmit\"",
    "test:spec": "jest",
    "prepare": "run-s clean transpile",
    "prepublishOnly": "yarn test"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}"
    ],
    "coveragePathIgnorePatterns": [
      "/index\\.tsx?$",
      "<rootDir>/src/schema/",
      "<rootDir>/src/wrappers/"
    ],
    "coverageDirectory": "<rootDir>/coverage/",
    "coverageReporters": [
      "lcov",
      "text-summary"
    ],
    "mapCoverage": true,
    "testRegex": "\\.spec\\.tsx?$",
    "moduleFileExtensions": [
      "js",
      "jsx",
      "ts",
      "tsx"
    ],
    "transform": {
      "\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "unmockedModulePathPatterns": [
      "<rootDir>/node_modules/"
    ],
    "setupFiles": [
      "<rootDir>/setup-jest.js"
    ]
  }
}
